var outlineFilter = new Filters.OutlineFilter();;
if (this.filters.length < 1) {
  this.filters.push(outlineFilter);
}
var that = this;
this.filters.forEach(function(filter) {
  if (filter === outlineFilter) {
    filter.thickness = {{thickness}};
    filter.color = '{{color}}';    
  }else {
    that.filters.push(outlineFilter)
  }
});