{{#ifCond enabled true}}
var convolutionFilter = new Filters.ConvolutionFilter();;
if (this.filters.length < 1) {
  this.filters.push(convolutionFilter);
}
var that = this;
this.filters.forEach(function(filter) {
  if (filter === convolutionFilter) {
    filter.width = {{width}};
    filter.height = {{height}};    
  }else {
    that.filters.push(convolutionFilter)
  }
});
{{/ifCond}}