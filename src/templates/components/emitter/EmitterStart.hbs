this.emitters = this.emitters || [];
this.emitters.push(this.latestEmitter);

this.latestEmitter.emit();

if(!this.onTick){

    function onTick() {
        for(var i=0,len=this.emitters.length;i<len;i++){
            var emitter = this.emitters[i];
            emitter.update(0.0167);
            emitter.p.x = this.emitterZone.x + this.emitterZone.width/2;
            emitter.p.y = this.emitterZone.y + this.emitterZone.height/2;
        }
    }

    this.onTick = onTick.bind(this);
    PIXI.ticker.shared.add(this.onTick);
}