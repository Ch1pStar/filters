// Colors

$box-bg = #fff
$color-border = #e5e5e5
$box-shadow = rgba(0,0,0, 0.1)
$box-shadow-big = rgba(0, 0, 0, 0.12)
$no-fill = transparent


/*
Basic colors
Avoid using '$color-basic' in places where '$color-default'
should be used. Even though their values match now, they
might change in the future, leading to style errors.
*/


$color-lighten = #fff 			//Instead of using '$color-darken' & '$color-lighten' directly,
$color-darken = #000 			//use '$color-primary' & '$color-primary-invert' to set the text
								//colors.
$color-default = #bac2cf
$color-basic = #9eb0c7          //ToDo
$color-info = #519bc2
$color-success = #8fc350
$color-warning = #fa9e00
$color-danger = #f85839


// text that should match BG (for example, inside a solid button)
$color-primary = $color-lighten		

// default header text color
$color-primary-invert = $color-darken

// default text color
$color-secondary-invert = tint($color-darken, 40%)

/*
Dark
Use this for coloring text, since it needs to be 
slightly darker than the default for legibility.
!On a dark theme replace 'shade' with 'tint'.
*/

$color-default-dark = darken($color-default, 15%)
$color-lighten-dark = shade($color-lighten, 15%)
$color-info-dark = shade($color-info, 15%)
$color-success-dark = shade($color-success, 15%)
$color-warning-dark = shade($color-warning, 15%)
$color-danger-dark = shade($color-danger, 15%)


/*
Lighter
Use this for light/translucent background fill.
Emulates transparency by mixing the base colors
with the background color.
!Make sure $box-bg matches the background color.
*/

$color-primary-default-lighter = mix($color-default, $box-bg, 20%)

$color-default-lighter = mix($color-default, $box-bg, 35%)
$color-lighten-lighter = mix($color-lighten, $box-bg, 35%)
$color-info-lighter = mix($color-info, $box-bg, 35%)
$color-success-lighter = mix($color-success, $box-bg, 35%)
$color-warning-lighter = mix($color-warning, $box-bg, 35%)
$color-danger-lighter = mix($color-danger, $box-bg, 35%)



/*
Light & Darker
Not used in any components yet so the values can be
adjusted if needed.
!On a dark theme replace 'tint' with 'shade' and 
'darken' with 'lighten'
*/

$color-default-light = mix($color-default, $box-bg, 50%)
$color-darken-light = mix($color-darken, $box-bg, 50%)
$color-info-light = mix($color-info, $box-bg, 50%)
$color-success-light = mix($color-success, $box-bg, 50%)
$color-warning-light = mix($color-warning, $box-bg, 50%)
$color-danger-light = mix($color-danger, $box-bg, 50%)

$color-default-darker = darken($color-default, 50%)
$color-lighten-darker = darken($color-lighten, 50%)
$color-info-darker = darken($color-info, 50%)
$color-success-darker = darken($color-success, 50%)
$color-warning-darker = darken($color-warning, 50%)
$color-danger-darker = darken($color-danger, 50%)


/*
In case we need an even lighter or darker shade,
use -lightest or -darkest to add it and don't forget
to swap 'lighten' with 'darken' for dark themes
*/

$color-default-lightest-primary = lighten($color-default, 90%)
$color-default-lightest-secondary = lighten($color-default, 70%)
$color-darken-lightest = lighten($color-darken, 80%)


//These should be deleted and replaced with the variables they point to

$color-primary-caption = $color-lighten-light            ///ToDo
$color-primary-loader = alpha($color-lighten, 0.2)
$color-primary-border = alpha($color-default, 0.3)      //List border
$color-primary-nav-dark = #364150
$color-primary-nav-inner = #262d38
$color-primary-light = #f5f7f9
$color-primary-nav-inner-light = #e4e9ef
$color-primary-bg = #eef1f5