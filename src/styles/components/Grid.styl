.grid-component-container
	height: 100%
	.grid-component
		height: 100%
		display flex
		flex-wrap: wrap
		padding: 5px
		padding-top: 0
		box-sizing: border-box
		margin-top: -5px;
		.img-box
			width: 50px
			height: 50px
			margin: 5px
			border-radius: 5px
			border: 1px solid #0e0e0e
			box-sizing: border-box
			background: #0e0e0e
			img
				max-width: 100%
				max-height: 100%
		.active
			background: #478020
			border: 1px solid #61a433