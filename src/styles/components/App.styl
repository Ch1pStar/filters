a
	cursor: default
.app-component-container
	height: 100%
	min-width: 540px
	display: flex
	align-items: center
	justify-content: center
	.app-component
		position: relative
		width: 100%
		height: 100%
		display: flex
		flex-direction: column
		cursor: default
		.inner
			height: 100%
			display: flex
			background-color: #2e2e2e
			.left, .right
				width: 100%
				position: relative
				display: flex
				flex-grow: 1
				padding: 12px
				box-sizing: border-box
			.left
				flex-direction: row
			.right
				max-width: 580px
				padding-left: 0
				flex-direction: column

	@media screen  and (max-width : 1090px)
		height: 100%
		.app-component
			.inner
				display: flex
				flex-flow: column
				.left
					margin: 0
					padding-bottom: 0
					min-height: 50%
					background-color: #2e2e2e;
				.right
					max-width: 100%
					flex-direction: column
					margin: 0
					padding-left: 12px
					min-height: 50%