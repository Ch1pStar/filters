.input-range-component-container
	.input-range-component
		.component
			.input-container
				display: flex
				flex-flow: row wrap
				align-content: space-between
				justify-content: space-between
				border-bottom: none
				input[type="range"]
					-webkit-appearance: none
					display: inline-block
					margin-top: 6px
					margin-bottom: 5px
					width: 100%
					height: 7px
					padding: 4px 0
					border-radius: 13px
					outline: none
					background: $color-default-lighter
				input[type="range"]::-webkit-slider-thumb
					border: 3px solid $color-default
					height: 17px
					width: 17px
					border-radius: 50%
					background: $color-default-lighter
					cursor: pointer
					-webkit-appearance: none
					margin-top: 1px
				.label
					margin-bottom: 5px
					color: $color-lighten
					background: $color-default
					border-radius: 50px
					height: 18px
					padding: 2px 21px 2px
					font-size: 13px
					position: relative
					box-shadow: 0 3px 7px 0 $box-shadow
					&:before
						content: " "
						background: $color-default
						border-radius: 30px 0 0
						position: absolute
						top: calc(100% - 3px)
						left: 50%
						height: 6px
						width: 5px
						margin-left: -1px
						transform: rotate(45deg)
						box-shadow: 4px 5px 12px -4px $color-darken
				.min,
				.max
					color: $color-secondary-invert
				.min
					padding-top: 5px
					padding-left: 3px
					font-size: 12px
				.max
					padding-top: 5px
					padding-right: 3px
					font-size: 12px