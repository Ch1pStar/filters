.tools-line
	height: 70px
	.buttons
		height: 100%
		justify-content: flex-end
		.button
			padding: 12px 13px
		.color
			background: #3d3d3d
			&:hover
				background-color: lighten(#3d3d3d, 10%)
			&:active
				background-color: darken(#3d3d3d, 25%)
		.remove
			background: #3b3b3b
			&:hover
				background-color: lighten(#3b3b3b, 10%)
			&:active
				background-color: darken(#3b3b3b, 25%)